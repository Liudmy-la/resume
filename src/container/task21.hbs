<main>

<div class="card mt-5">
    <div class="card-body">
        {{#with heading}}
        <div class="card">            
            <div class="card-body">
                {{#with main}}
                <h1>{{title}}</h1>
                <p>{{text}}</p>
                {{#with button_text}}               
                    <button class="btn btn-primary">{{solid}}</button>
                    <button class="btn btn-outline-primary my-5">{{outline}}</button>
                {{/with}}
            {{/with}}
            </div>            
        </div>
        <div class="card">
            <div class="card-body">
                {{#with second}}
                <h2>{{title}}</h2>
                <p>{{text}}</p>
                    {{#with button_text}}                
                    <button class="btn btn-secondary">{{solid}}</button>
                    <button class="btn btn-outline-secondary my-5">{{outline}}</button>
                    {{/with}}
                {{/with}}
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                {{#with subblock}}
                <h3>{{title}}</h3>
                <p>{{text}}</p>          
                    {{#with button_text}}
                    <button class="btn btn-dark">{{solid}}</button>
                    <button class="btn btn-outline-dark my-5">{{outline}}</button>
                    {{/with}}
                {{/with}}
            </div>
        </div>
        {{/with}}
    </div>
</div>
<div class="card my-5">
    <div class="card-body">
        {{#with nested_display}}
        <div class="display-1">{{title}}</div>
        <div class="card my-4">
            <div class="card-body">
                {{#with children_display}}
                <div class="display-4 mb-4">{{title}}</div>
                <p>{{text}}</p>
                    {{#with button}}<button class="btn btn-outline-warning">{{text}}</button>{{/with}}
                {{/with}}
            </div>
        </div>
        <h6>{{header_text}}</h6>
        {{#with button}}<button class="btn btn-info my-5"><span class="text-light">{{text}}</span></button>{{/with}}
        {{/with}}
    </div>
</div>
<div class="card">
    <div class="card-body">
        {{#with paragraph}}
        <p class="text-uppercase">{{title}}</p>
        <p class="text-lowercase">{{text}}</p>
        {{#with button}}<button class="btn btn-link" href="{{url}}">{{text}}</button>{{/with}}
        <div class="card mt-5">
            <div class="card-body">
                {{#each list_name}}
                    <li class="mb-4"><button class="btn btn-link" href="{{url}}">{{text}}</button></li>
                </ul>
                {{/each}}
            </div>
        </div> 
        {{/with}}       
    </div>
</div>
</main>