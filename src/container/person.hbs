<div>
    {{#with person}}
    <main>
        <section>
            {{> title data="Personal Info" big=true}}
            <div class="mb-5"><b> {{name}} </b></div>
            <div><i>Age:</i> {{age}} </div>
            <div class="my-5"><i>Gender:</i> {{gender}} </div>
            <div>
                <i><b>Address:</b></i> 
                {{#with address}}
                    <div><i>| street:</i> {{street}} </div>
                    <div><i>| city:</i> {{city}} </div>
                    <div><i>| state:</i> {{state}} </div>
                    <div><i>| zip:</i> {{zip}} </div>
                    <div><i>| country:</i> {{country}} </div>
                {{/with}}
            </div>   
           
        </section>
    <hr class="my-5">
        <section>
            {{> title data="Person`s Education" big=false}}
            {{#each education}}
            <ul>
                <li>
                    <div><b>{{university}}</b></div>
                    <div><i>graduated in {{graduationYear}} </i></div>
                    <div>Degree: {{degree}} </div>
                    <div>Major: {{major}}</div>
                </li>
            </ul>
            {{/each}}
        </section>
    <hr class="my-5">
        <section>
            {{> title data="Person`s Work Experience" big=false}}
            {{#each workExperience}}
            <ul>
                <li>
                    <div><b>{{title}}</b></div>
                    <div><i>from {{startDate}} to {{endDate}}</i></div>
                    <div><b>Company: {{company}}</b> (founded in {{year_founded}}, {{industry}})</div>
                    <div class="my-5">
                        <ins>Responsibilities</ins>: {{#each responsibilities}}
                        <ul>
                            <li>{{this}}</li>
                        </ul>
                        {{/each}}
                    </div>
                    <div>
                        <b><i>Company employees:</i></b> {{#each employees}}
                        <ul>
                            <li>
                                <div>{{name}}</div>
                                <div>{{position}} in {{department}} department</div>
                                <div class="mt-5">
                                    Projects: {{#each projects}}
                                    <ul>
                                        <li>
                                            <div>{{name}} ({{status}})</div>
                                            <div><i>{{description}}</i></div>
                                            <div class="mt-4">
                                                <i>Teams:</i> {{#each teams}}
                                                <ul>
                                                    <li>
                                                        <div>{{team_name}}</div>
                                                        <div class="my-5">                                                        
                                                            <ul>
                                                                <li class="mb-3">
                                                                    {{#with team_leader}}
                                                                        <div>{{title}} - {{name}}</div>
                                                                        <div>{{email}}</div>
                                                                    {{/with}}
                                                                </li>
                                                                {{#each team_members}}
                                                                <li>
                                                                    <div>{{title}} - {{name}}</div>
                                                                    <div>{{email}}</div>
                                                                    <div class="my-5">
                                                                        <i>Skills:</i> {{#each skills}}
                                                                        <ul><li>{{this}}</li></ul>
                                                                        {{/each}}
                                                                    </div>
                                                                    <div>
                                                                        <i>Projects:</i> {{#each projects}}
                                                                        <ul>
                                                                            <li>
                                                                                <div>{{name}}</div>
                                                                                <div><i>{{description}}</i></div>
                                                                                <div class="my-4">
                                                                                    Technologies: {{#each technologies}}
                                                                                    <ul><li>{{this}}</li></ul>
                                                                                    {{/each}}
                                                                                </div>
                                                                                <div>
                                                                                    Team members: {{#each team_members}}
                                                                                    <ul><li><div>{{title}} - {{name}}</div></li></ul>
                                                                                    {{/each}}
                                                                                </div>
                                                                            </li>
                                                                        </ul>
                                                                        {{/each}}
                                                                    </div>
                                                                </li>
                                                                {{/each}}
                                                            </ul>                                                        
                                                        </div>
                                                        <div>

                                                        </div>
                                                    </li>
                                                </ul>
                                                {{/each}}
                                            </div>
                                        </li>
                                    </ul>
                                    {{/each}}
                                </div>
                            </li>
                        </ul>
                        {{/each}}
                    </div>

                </li>
            </ul>
            {{/each}}
        </section>
    </main>
    {{/with}}  
</div>


