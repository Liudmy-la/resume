<main>
    <object>
        <nav area-label="breadcrumb" class="ms-0">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                <li class="breadcrumb-item">
                    {{#if url}}
                    <a href="{{url}}" target="_blank">{{name}}</a>
                    {{else}}
                    <b>{{name}}</b>
                    {{/if}}
                </li>
                {{/each}}
            </ol>
        </nav>
    </object>
    <h1 class="mt-5">{{header}}</h1>
    <object>
        <div class="row my-5">
            {{#each sortBlock}}
                <div class="col-3 gx-2">
                    <select class="form-select">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                </div>
            {{/each}}
        </div>
    </object>
    <div class="row">
        <div class="col-4 mb-5">
            {{#with filterBlock}}
            <div class="card p-3">
                {{#with sellers}}
                    <div class="h6 mb-3">{{title}}</div>                    
                        {{#each list}}
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="sellers">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}                    
                {{/with}}
                <hr>                
                {{#with brands}}
                    <div class="h6 mb-3">{{title}}</div>
                    {{#with input}}
                        <input type="text" class="form-controll mb-3 p-2" placeholder="{{placeholder}}">
                    {{/with}}
                        {{#each options}}
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="sellers">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                        </div>
                        {{/each}}                    
                {{/with}}
                <hr>
                {{#with price}}
                    <div class="h6 mb-3">{{title}}</div>
                        {{#with range}}
                            <input type="number" class="form-controll p-2" placeholder="{{from}}">
                            <input type="number" class="form-controll my-2 p-2" placeholder="{{to}}">
                        {{/with}}
                    <div class="my-2">
                        {{#with button}}
                            <a href="{{link}}" target="_blank" class="btn btn-outline-secondary px-4">{{text}}</a>
                        {{/with}}
                    </div>
                {{/with}}
                {{#each filterList}}
                    <hr>
                    {{#with this}}
                        <div class="h6 mb-3">{{title}}</div>                    
                            {{#each options}}
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="{{title}}">
                                <label class="form-check-label">
                                    {{value}}
                                </label>
                            </div>
                            {{/each}}                    
                    {{/with}}
                {{/each}}
            </div>
            {{/with}}
        </div>
        <div class="col-8 ps-0">            
            <div class="row gx-2">
            {{#each goodsList}}
                <div class="col-6 mb-3">
                    <div class="card">
                        <img class="card-top-image" src="{{img}}" alt="{{name}}">
                        <div class="card-body p-3">
                            <div>
                                <div>
                                    {{#if isHot}}<span class="badge bg-warning text-light rounded-pill px-2">HOT!</span>{{/if}}
                                    {{#if isNew}}<span class="badge bg-primary rounded-pill px-2">Нове</span>{{/if}}
                                </div>
                                <div class="my-2">
                                    {{#if isFast}}<span class="badge bg-success p-2 mb-1">Швидка доставка</span>{{/if}}
                                    {{#if isFree}}<span class="badge bg-secondary p-2">Безкоштовна доставка</span>{{/if}}
                                </div>
                            </div>
                            <div class="card-title h4">{{name}}</div>
                            <div class="my-3">
                                {{#with review}}
                                    {{amount}} {{text}}
                                {{/with}}
                            </div>
                            <div class="h3">{{price}}</div>
                            <div class="my-3">{{delivery}}</div>
                            <div class="my-2">
                                {{#each buttons}}
                                    <div>
                                        <a href="link" target="_blank" class="btn
                                            {{#if isPrimary}} btn-primary {{/if}}
                                            {{#if isSecondary}} btn-secondary {{/if}}
                                        mb-2">
                                            {{text}}
                                        </a>
                                    </div>
                                {{/each}}
                            </div>
                            <div>
                                {{#each characteristics}}
                                <ul>
                                    <li>{{title}}: {{value}}</li>
                                </ul>
                                {{/each}}
                            </div>
                        </div>
                    </div>                    
                </div>
            {{/each}}
            </div>
        </div>
    </div>
    <object>
        {{#with service}}
            {{> greenserv}}
        {{/with}}
    </object>
</main>