{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work Experience" big=true}}
            <div>
                {{#each works}}
                    <ul>
                        <li>
                            <div>{{position}}</div>
                            <br>

                            <div>
                                {{duration.from}} - 
                                    {{#if duration.to}} 
                                        {{duration.to}} {{else}} <i>..continues</i> 
                                    {{/if}}
                            </div>
                            <br>

                            <div>
                                {{#if company.url}} 
                                {{> link text=company.name href=company.url blank=true noLine=true}}
                                {{else}}
                                <b>{{company.name}}</b>
                                {{/if}}
                            </div>
                            <br><br>

                            <div>
                                <strong>Projects: ({{projectAmount}})</strong>
                            </div>
                            <br>

                            <div> 
                            <ol>
                                {{#each projects}}                            
                                <li>
                                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                    <div>  
                                        <p><i>Project description:</i> {{about}}</p>
                                    </div>
                                    <br>

                                    <div><em><ins>Used stacks </ins>: ({{stacksAmount}})</em></div>
                                    <div>                                       
                                        <ul>
                                        {{#each stacks}} 
                                            <li>{{name}}</li> 
                                        {{/each}}
                                        </ul>
                                    </div>
                                    <br>

                                    <div><em><ins>Achieved awards</ins>: ({{awardsAmount}})</em></div>
                                    <div>                                         
                                        <ul>
                                        {{#each awards}} 
                                            <li>{{name}}</li>
                                        {{/each}}
                                        </ul>
                                    </div>
                                    <br>
                                </li>
                                <br>                         
                            {{/each}}
                            </ol>
                            </div>
                        </li>
                        <br>
                    </ul>
                {{/each}}
            </div>
        </section>
      
    </main>
    {{/with}}  
</div>

