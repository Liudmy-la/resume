<!DOCTYPE html>
<html>
    <head>
        <title>{{page}}</title>
        <meta charset='utf-8' />       
        <link href='css/index.css' rel='stylesheet' />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        
    </head>
<body>
    <section>
    {{#with navigation}}
        <div class="card p-2">
            <div class="nav">
            {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" target="_blank" class="nav-link">{{text}}</a>
                </div>                
            {{/each}}
                <div class="nav-item">
                    <a href="" class="nav-link disabled">Disabled</a>
                </div>                
            </div>
        </div>
    {{/with}}
</section>
{{{body}}}  
</body>
<footer>
     <hr>
    <section>
        <div class="row">
        {{#each footer}}                     
            <div class="col-2">
                <div class="nav flex-column">
                {{#each this}}
                    <div class="nav-item">
                        <a href="{{link}}" target="_blank" class="nav-link {{#if isDisabled}}disabled{{/if}}">{{text}}</a>
                    </div>                    
                {{/each}}
                </div>
            </div>       
        {{/each}}
        </div>
    </section>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/0901f5c582.js" crossorigin="anonymous"></script>

</html>